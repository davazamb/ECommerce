@model IEnumerable<ECommerce.Models.Company>

@{
    ViewBag.Title = "Empresas";
}
<div class="row">
    <div class="col-md-offset-1 col-md-10">
        <h2>Empresas</h2>

        <p>
            <a href="@Url.Action("Create" , "Companies")" class="btn btn-success"><i class="fa fa-plus fa-lg"></i> Agregar</a>
        </p>
        <div class="row margin-b-2">
            @foreach (var item in Model)
            {
                <dl class="col-sm-6 col-md-3">
                    <dd class="text-center">
                        <a href="@Url.Action("Details" , "Companies",  new { id = item.CompanyId })">
                            @Html.DisplayFor(modelItem => item.Name)
                        </a>
                    </dd>
                    <dd>
                        <div class="row text-center">
                            <div>
                                @if (!string.IsNullOrEmpty(item.Logo))
                                {
                                    <a href="@Url.Action("Details" , "Companies",  new { id = item.CompanyId })">
                                        <img src="@Url.Content(item.Logo)" alt="Image" style="width:150px;height:150px;" />
                                    </a>
                                }
                                else
                                {
                                    <h4 style="color:darkred">No hay Logo</h4>
                                }
                            </div>
                        </div>

                    </dd>
                    <dd class="text-center">
                        @Html.DisplayFor(modelItem => item.Departament.Name)
                    </dd>
                    <dd class="text-center">
                        @Html.DisplayFor(modelItem => item.City.Name)
                    </dd>
                    <dd><p></p></dd>
                    <dd class="text-center">
                        <a href="@Url.Action("Edit" , "Companies",  new { id = item.CompanyId })" class="btn btn-primary"><i class="fa fa-edit fa-lg"></i></a>|
                        <a href="@Url.Action("Details" , "Companies",  new { id = item.CompanyId })" class="btn btn-warning"><i class="fa fa-eye fa-lg"></i></a>|
                        <a href="@Url.Action("Delete" , "Companies",  new { id = item.CompanyId })" class="btn btn-danger"><i class="fa fa-trash-o fa-lg"></i></a>
                    </dd>

                </dl>
            }
        </div>

