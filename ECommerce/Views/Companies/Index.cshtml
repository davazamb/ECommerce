@model IEnumerable<ECommerce.Models.Company>

@{
    ViewBag.Title = "Empresas";
}
<div class="row">
    <div class="col-md-offset-1 col-md-10">
        <h2>Empresas</h2>

        <p>
            <a href="@Url.Action("Create" , "Companies")" class="btn btn-success"><i class="fa fa-plus fa-lg"></i> Agregar</a>
        </p>
        <table class="table table-hover table-bordered table-striped">
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Name)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Departament.Name)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.City.Name)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Phone)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Address)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Logo)
                </th>
                <th></th>
            </tr>

            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Name)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Departament.Name)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.City.Name)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Phone)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Address)
                    </td>
                    <td>
                        @if (!string.IsNullOrEmpty(item.Logo))
                        {
                            <img src="@Url.Content(item.Logo)" alt="Image" style="width:100px;height:100px;max-width: 100%; height: auto;" />
                        }

                    </td>
                    <td>
                        <p><a href="@Url.Action("Edit" , "Companies",  new { id = item.CompanyId })" class="btn btn-primary"><i class="fa fa-edit fa-lg"></i> Editar</a></p>
                        <p><a href="@Url.Action("Details" , "Companies",  new { id = item.CompanyId })" class="btn btn-warning"><i class="fa fa-eye fa-lg"></i> Detailles</a></p>
                        <p><a href="@Url.Action("Delete" , "Companies",  new { id = item.CompanyId })" class="btn btn-danger"><i class="fa fa-trash-o fa-lg"></i> Eliminar</a></p>

                    </td>
                </tr>
            }

        </table>
    </div>
</div>