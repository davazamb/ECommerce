@model PagedList.IPagedList<ECommerce.Models.City>
    @using PagedList.Mvc;

@{
    ViewBag.Title = "Ciudades";
}
<div class="row">
    <div class="col-md-offset-2 col-md-8">
        <h2>Ciudades</h2>

        <p>
            <a href="@Url.Action("Create" , "Cities")" class="btn btn-success"><i class="fa fa-plus fa-lg"></i> Agregar</a>

        </p>
        <table class="table table-hover table-bordered table-striped">
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.FirstOrDefault().Departament.Name)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.FirstOrDefault().Name)
                </th>
                <th></th>
            </tr>

            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Departament.Name)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Name)
                    </td>
                    <td>
                        <a href="@Url.Action("Edit" , "Cities",  new { id = item.CityId })" class="btn btn-primary"><i class="fa fa-edit fa-lg"></i> Editar</a>
                        <a href="@Url.Action("Details" , "Cities",  new { id=item.CityId })" class="btn btn-warning"><i class="fa fa-eye fa-lg"></i> Detailles</a>
                        <a href="@Url.Action("Delete" , "Cities",  new { id=item.CityId })" class="btn btn-danger"><i class="fa fa-trash-o fa-lg"></i> Eliminar</a>

                    </td>
                </tr>
            }

        </table>
        <div class="text-right">
            Página: @(Model.PageCount < Model.PageNumber ? 0 : Model.PageNumber), de: @Model.PageCount
            @Html.PagedListPager(Model, page => Url.Action("Index", new
   {
       page,
       sortOrder =
    ViewBag.CurrentSort,
       currentFilter = ViewBag.CurrentFilter
   }))
        </div>

    </div>
</div>